# Maintainer: Alejandro Osornio <aoxo.contact@gmail.com>

pkgname=synchroma
pkgver=2.7.0
pkgrel=1
pkgdesc='A general purpose syntax highlighter in pure Go'
arch=(x86_64)
url='https://github.com/alecthomas/chroma'
license=('MIT')
options=(!strip)
conflicts=('chroma')
provides=('chroma')
source=("chroma.tar.gz::https://github.com/alecthomas/chroma/releases/download/v${pkgver}/chroma-${pkgver}-linux-amd64.tar.gz")
sha256sums=('5c3a8a230d3ac8b2317631df11fd01bb6bf51bf81881b18abeea0f500cf702ca')

package() {
    install -d "${pkgdir}/usr/bin"    
    install -m 755 chroma "${pkgdir}/usr/bin/"
    chmod +x "${pkgdir}/usr/bin/chroma"
}
